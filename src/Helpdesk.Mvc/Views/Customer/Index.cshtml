@model Helpdesk.Mvc.Models.Organization
@{
	ViewData["Title"] = "Customer";
	Layout = "_LayoutAdminlteV3";
}

<!-- Content Header (Page header) -->
<!-- Main content -->
<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Title</h3>

						<div class="card-tools">
							<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
								<i class="fas fa-minus"></i>
							</button>
							<button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
								<i class="fas fa-times"></i>
							</button>
						</div>
					</div>

					<div class="card-body">
						<div class="row">
							<div class="col-lg-12">
								<input type="hidden" asp-for="@Model.organizationId" />
								<table id="grid" name="grid" class="table table-striped table-bordered">
									<thead>
										<tr>
											<th class="col-md-10">Customer</th>
											<th class="col-md-2"></th>
										</tr>
									</thead>
								</table>
							</div>
						</div>
					</div>
					<!-- /.card-body -->
					<div class="card-footer">
						Footer
					</div>
					<!-- /.card-footer-->
				</div>
				<!-- /.card -->
			</div>
		</div>
	</div>
</section>
<!-- /.content -->
<!-- /.content-wrapper -->
<div class="col-lg-2">
	<div class="row">
		<div class="col-md-12">
			<a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEdit","Customer", new { org = Model.organizationId })')"><i class="fa fa-plus"></i> Add New Customer</a>
		</div>
	</div>
</div>

<!-- /.content -->
<!--modal placeholder-->
<div class="modal modal-primary fade" id="modalDefault">
	<div class="modal-dialog">
		<div class="modal-content">

		</div>
	</div>
</div>



@section Scripts{
	@await Html.PartialAsync("_ValidationScriptsPartial")
	<script src="~/js/views/customer/index.js"></script>
}

